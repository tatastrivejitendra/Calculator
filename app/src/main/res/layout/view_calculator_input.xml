<?xml version="1.0" encoding="utf-8"?>
<marge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.RelativeLayout"
    >

    <View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTile"/>

    <ImageView
        android:id="@+id/input_element_image"
        android:layout_width="@dimen/sizeIcon"
        android:layout_height="@dimen/sizeIcon"
        android:layout_centerInParent="true"
        android:tint="@color/colorImage"
        android:src="@drawable/ic_trash"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input_element_text"
        android:layout_centerInParent="true"
        android:textColor="@color/colorText"
        android:textSize="@dimen/textInputSize"
        android:textStyle="bold"
        android:text="1" />
    <View
        android:id="@+id/input_element_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"/>
</marge>